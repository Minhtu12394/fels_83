<h2><%= @category.name %></h2>
<p><%= @category.description %></p>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to category_lessons_path(@category), method: :post,
        class: "btn btn-primary" do %>
        <span class="glyphicon glyphicon-play"></span> <%= t :start_new_lesson %>
      <% end %>
    </div>
  </div>
</div>
<br/>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t :lessons %></h3>
  </div>
  <% if @lessons.any? %>
    <%= render @lessons %>
    <div class="text-center">
      <%= will_paginate @lessons %>
    </div>
  <% else %>
    <%= t :no_items_found %>
  <% end %>
</div>
