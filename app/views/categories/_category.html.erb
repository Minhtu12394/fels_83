<div class="list-group-item">
  <div class="row">
    <div class="col-md-3">
      <b class="category-name">
        <%= category.name %>
      </b>
    </div>
    <div class="col-md-6">
      <p class="category-description">
        <%= category.description %>
      </p>
    </div>
    <div class="col-md-3">
      <div class="pull-right">
        <%= link_to category, class: "btn btn-info btn-xs" do %>
          <span class="glyphicon glyphicon-eye-open"></span>
          <%= t :details %>
        <% end %>
        <%= link_to category_lessons_path(category), method: :post,
          class: "btn btn-primary btn-xs" do %>
          <span class="glyphicon glyphicon-play"></span>
          <%= t :start %>
        <% end %>
      </div>
    </div>
  </div>
</div>
