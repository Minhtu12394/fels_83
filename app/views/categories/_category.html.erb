<div class="list-group-item">
  <div class="row">
    <div class="col-md-3">
      <b class="category-name">
        <%= category.name %>
      </b>
    </div>
    <div class="col-md-9">
      <p class="category-description">
        <%= category.description %>
      </p>
    </div>
    <div class="col-md-3">
      <%= link_to category, class: "btn btn-info" do %>
        <span class="glyphicon glyphicon-eye-open"></span> <%= t :details %>
      <% end %>
    </div>
  </div>
</div>
