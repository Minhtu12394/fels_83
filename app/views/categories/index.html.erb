<h3><%= t :categories %></h3>

<% if @categories.any? %>
  <table class="table table-hover">
    <tr>
      <th><%= t :name %></th>
      <th><%= t :description %></th>
      <th></th>
    </tr>
    <%= render @categories %>
  </table>
  <div class="text-center">
    <%= will_paginate %>
  </div>
<% else %>
  <%= t :no_items_found %>
<% end %>

